
<div class="group-page">

<div>
  <h2>Create your own <a href="/groups/new">Cafe</a>!</h2>
  
</div>
<div>
  <div><span id="numOfGroups"></span> Available Groups</div>
    {{#each listOfGroups}}
      <div>
        <img class="max-min2" src="{{this.image}}" alt="">
        
        <h3><a href='/group/{{this._id}}'>{{this.name}}</a></h3>
        <p>{{this.description}}</p>

        <a href="/group/{{this._id}}/edit">Just Changing the filter</a>

        <form action="/groups/{{this._id}}/remove" method="post">
          <button>Turn into Coffee Grinds!</button>
        </form>

     </div>
     <hr>
    {{/each}}
</div>
</div>